<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimesReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDarker</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <item name="fontFamily">
            sans-serif-condensed
        </item>

        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <!-- Customize your theme here. -->

        <item name="actionBarTheme" parent="@style/CustomAppBar"/>
        <item name="android:textColorSecondary">@color/very_light_grey</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomAppBar" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LightGreyText" parent="TextAppearance.AppCompat.Body1">
        <item name="color">@color/very_light_grey</item>
    </style>

    <style name="NewsTitle" parent="TextAppearance.AppCompat.Body2">
        <item name="color">@color/white</item>
    </style>

    <style name="AppTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>